<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:background="@drawable/stroke_out_line"
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:fontFamily="@font/modu"
            android:id="@+id/tv_custom_challenge_title"
            android:layout_width="217dp"
            android:layout_height="39dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="챌린지 제목"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_custom_challenge_uning"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_custom_challenge_start_date"
            android:layout_width="181dp"
            android:layout_height="23dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/modu"
            android:gravity="left"
            android:text="챌린지 시작 기간"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_custom_challenge_end_date"
            app:layout_constraintStart_toStartOf="@+id/tv_custom_challenge_end_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_custom_challenge_title" />

        <TextView
            android:id="@+id/tv_custom_challenge_end_date"
            android:layout_width="181dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/modu"
            android:gravity="left"
            android:text="챌린지 종료 기간"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_summary"
            app:layout_constraintStart_toEndOf="@+id/textView50"
            app:layout_constraintTop_toBottomOf="@+id/tv_custom_challenge_start_date" />

        <ImageView
            android:id="@+id/iv_custom_challenge_photo"
            android:layout_width="126dp"
            android:layout_height="130dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iv_custom_challenge_uning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_custom_challenge_uning"
            app:srcCompat="@drawable/nuroongji" />


        <TextView
            android:id="@+id/tv_period"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/modu"
            android:gravity="center"
            android:text="내기 주제: "
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_memberCount"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_memberCount"
            app:layout_constraintTop_toBottomOf="@+id/tv_memberCount" />

        <TextView
            android:id="@+id/tv_memberCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/modu"
            android:gravity="center"
            android:text="참여자 현황: "
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_summary"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_summary"
            app:layout_constraintTop_toBottomOf="@+id/tv_summary" />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/modu"
            android:gravity="center"
            android:text="챌린지 목표: "
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_memberCount"
            app:layout_constraintStart_toEndOf="@+id/iv_custom_challenge_photo"
            app:layout_constraintTop_toBottomOf="@+id/tv_custom_challenge_end_date" />

        <TextView
            android:textStyle="italic"
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/minkyoung"
            android:text="참여 여부: "
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/iv_custom_challenge_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_custom_challenge_uning"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_custom_challenge_ing"
            app:layout_constraintEnd_toEndOf="@+id/iv_custom_challenge_ing"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView29"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/uncheck" />

        <ImageView
            android:id="@+id/iv_custom_challenge_ing"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/check"
            app:layout_constraintStart_toEndOf="@+id/textView29"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/modu"
            android:text="도전 기간: "
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/tv_summary"
            app:layout_constraintTop_toBottomOf="@+id/tv_custom_challenge_title" />

        <TextView
            android:id="@+id/tv_custom_challenge_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/modu"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_summary"
            app:layout_constraintStart_toEndOf="@+id/tv_summary"
            app:layout_constraintTop_toTopOf="@+id/tv_summary" />

        <TextView
            android:id="@+id/tv_custom_challenge_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/modu"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_memberCount"
            app:layout_constraintStart_toEndOf="@+id/tv_memberCount"
            app:layout_constraintTop_toTopOf="@+id/tv_memberCount" />

        <TextView
            android:id="@+id/tv_custom_challenge_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/modu"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_period"
            app:layout_constraintStart_toEndOf="@+id/tv_period"
            app:layout_constraintTop_toTopOf="@+id/tv_period" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCustomChallenge">

    <Button
        android:id="@+id/btn_create_custom_challenge_back"
        android:layout_width="33dp"
        android:layout_height="39dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toTopOf="@+id/textView23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/modu"
        android:textStyle="bold"
        android:textSize="28sp"
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="새 챌린지 만들기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:background="@drawable/stroke_out_line"
        android:padding="10dp"
        android:id="@+id/linearLayout16"
        android:layout_width="372dp"
        android:layout_height="562dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23">

        <LinearLayout
            android:background="@drawable/stroke_top_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/modu"
                android:gravity="center_vertical|left"
                android:text="챌린지 제목: "
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_create_custom_challenge_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="ex)올해는 금연하자!(내성초 104기)"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView32"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:fontFamily="@font/modu"
                android:gravity="center_vertical|left"
                android:text="챌린지 기간: "
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/tv_create_custom_challenge_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="시작 날짜 선택"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_create_custom_challenge_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="시작 시간 선택"
                android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                android:id="@+id/tv_create_custom_challenge_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="종료 날짜 선택"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_create_custom_challenge_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="종료 시간 선택"
                android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout

            android:background="@drawable/stroke_top_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView35"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/modu"
                android:gravity="center_vertical|left"
                android:text="벌칙/내기: "
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_create_custom_challenge_bet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="ex)다음 모임에 2차 쏘기"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView37"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/modu"
                android:gravity="center_vertical|left"
                android:text="최대 인원: "
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_create_custom_challenge_max"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="ex)올해는 금연하자!(동래고 84기)"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/stroke_top_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

<!--                        <EditText-->
<!--                android:id="@+id/et_create_custom_challenge_method"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="2"-->
<!--                android:hint="ex)날짜를 선택해 주세요."-->
<!--                android:textSize="15sp" />-->

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/modu"
                android:gravity="center_vertical|left"
                android:text="챌린지 방식: "
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:entries="@array/method"
                android:id="@+id/sp_create_custom_challenge_method"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/modu"
                android:gravity="center_vertical|left"
                android:text="챌린지 한줄 요약:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_create_custom_challenge_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="ex)10일동안 끊자"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/stroke_top_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/modu"
                android:gravity="center_vertical"
                android:text="챌린지 상세 내용: "
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_create_custom_challenge_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="ex)못하면 다음 모임에 2차 쏘는거고, 한도는 없다ㅋㅋ?"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView39"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/modu"
                android:gravity="center"
                android:text="사진 첨부"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/create_custom_challenge_photo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical|left"
                app:srcCompat="@drawable/nuroongji" />

            <Button
                android:id="@+id/btn_create_custom_challenge_album"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@drawable/btn_search_in_album"
                android:text="앨범에서 찾기" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_create_custom_challenge_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_create_custom_challenge"
        android:text="생성"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout16" />

</androidx.constraintlayout.widget.ConstraintLayout>